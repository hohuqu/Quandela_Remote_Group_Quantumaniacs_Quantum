	publisher = {arXiv},
	author = {Maring, Nicolas and Fyrillas, Andreas and Pont, Mathias and Ivanov, Edouard and Stepanov, Petr and Margaria, Nico and Hease, William and Pishchagin, Anton and Au, Thi Huong and Boissier, Sébastien and Bertasi, Eric and Baert, Aurélien and Valdivia, Mario and Billard, Marie and Acar, Ozan and Brieussel, Alexandre and Mezher, Rawad and Wein, Stephen C. and Salavrakos, Alexia and Sinnott, Patrick and Fioretto, Dario A. and Emeriau, Pierre-Emmanuel and Belabas, Nadia and Mansfield, Shane and Senellart, Pascale and Senellart, Jean and Somaschi, Niccolo},
	month = jun,
