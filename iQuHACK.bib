	note = {arXiv:2310.00585 [physics, physics:quant-ph]},
	pages = {5197},
	file = {arXiv.org Snapshot:/Users/marcin/Zotero/storage/EZUF329H/2310.html:text/html;Wang_2023_Quantum_generative_adversarial_learning_in_photonics.pdf:/Users/marcin/Documents/Zotero/ZotFile/iQuHACK/Wang_2023_Quantum_generative_adversarial_learning_in_photonics.pdf:application/pdf},
