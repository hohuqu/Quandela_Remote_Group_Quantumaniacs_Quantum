	note = {arXiv:2306.00874 [quant-ph]},
	file = {arXiv.org Snapshot:/Users/marcin/Zotero/storage/I5SUFIC2/2306.html:text/html;Maring_2023_A_general-purpose_single-photon-based_quantum_computing_platform.pdf:/Users/marcin/Documents/Zotero/ZotFile/iQuHACK/Maring_2023_A_general-purpose_single-photon-based_quantum_computing_platform.pdf:application/pdf},
